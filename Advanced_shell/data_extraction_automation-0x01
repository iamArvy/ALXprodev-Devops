#!/bin/bash

# Extract values from JSON using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}') # dm → m
WEIGHT=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}') # hg → kg
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize

# Print in human-readable format
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."

