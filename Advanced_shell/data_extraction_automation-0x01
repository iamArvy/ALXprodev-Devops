#!/bin/bash

# Extract values from JSON using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
formatted_height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}') # dm → m
formatted_weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}') # hg → kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize

# Print in human-readable format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

