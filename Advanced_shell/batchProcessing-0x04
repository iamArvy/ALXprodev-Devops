#!/bin/bash

# Directory to store Pokémon data
DATA_DIR="pokemon_data"
mkdir -p "$DATA_DIR"

# List of Pokémon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch Pokémon data
fetch_pokemon() {
    local pokemon=$1
    local url="https://pokeapi.co/api/v2/pokemon/$pokemon"
    local file="$DATA_DIR/$pokemon.json"

    echo "Fetching data for $pokemon..."
    if curl -s -f "$url" -o "$file"; then
        echo "Saved data to $file ✅"
    else
        echo "[$(date)] Failed to fetch data for $pokemon" >> "$DATA_DIR/errors.txt"
    fi
}

# Start all fetches in parallel
for POKEMON in "${POKEMONS[@]}"; do
    fetch_pokemon "$POKEMON" &
done

# Show running background jobs
echo "Running background jobs:"
jobs -p

# Optional: Kill any stuck processes after 10 seconds
sleep 10
for pid in $(jobs -p); do
    if kill -0 "$pid" 2>/dev/null; then
        echo "Killing stuck process with PID $pid"
        kill "$pid"
    fi
done

# Wait for all background processes to complete
wait

echo "All Pokémon data fetched!"
