#!/bin/bash

# Directory where JSON files are stored
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through all JSON files in DATA_DIR
for FILE in "$DATA_DIR"/*.json; do
    NAME=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/') # Capitalize first letter
    HEIGHT=$(jq -r '.height' "$FILE" | awk '{printf "%.1f", $1/10}') # dm → m
    WEIGHT=$(jq -r '.weight' "$FILE" | awk '{printf "%.1f", $1/10}') # hg → kg

    echo "$NAME,$HEIGHT,$WEIGHT" >> "$REPORT_FILE"
done

echo "CSV Report generated at: $REPORT_FILE"
echo

# Print the CSV contents
cat "$REPORT_FILE"
echo

# Calculate and print averages using awk
awk -F',' 'NR>1 {sumH+=$2; sumW+=$3; count++} 
END {printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", sumH/count, sumW/count}' "$REPORT_FILE"
